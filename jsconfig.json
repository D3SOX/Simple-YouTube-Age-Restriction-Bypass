{
  "compilerOptions": {
    "checkJs": true,

    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,

    "strict": true,
    "noImplicitAny": false,

    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "moduleDetection": "force"
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
  ]
}
